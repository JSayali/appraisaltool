<ratings xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
   xmlns='http://xml.strmik.cz/cmmi/ratingSchema'
   xsi:schemaLocation='http://xml.strmik.cz/cmmi/ratingSchema ratingSchema.xsd'>
    <rating id="orgMaturityLevel">
        <scale score="-1">
            <name lang="en">Not rated</name>
            <color type="html">red</color>
        </scale>
        <scale score="1">
            <name lang="en">ML1 - Initial</name>
            <color type="html">green</color>
        </scale>
        <scale score="2">
            <name lang="en">ML2 - Managed</name>
            <color type="html">green</color>
        </scale>
        <scale score="3">
            <name lang="en">ML3 - Defined</name>
            <color type="html">green</color>
        </scale>
        <scale score="4">
            <name lang="en">ML4 - Quant. Managed</name>
            <color type="html">green</color>
        </scale>
        <scale score="5">
            <name lang="en">ML5 - Optimizing</name>
            <color type="html">green</color>
        </scale>
    </rating>
    <rating id="processAreaCapLevel">
        <scale score="-1">
            <name lang="en">Not rated</name>
            <color type="html">red</color>
        </scale>
        <scale score="0">
            <name lang="en">CL0 - Incomplete</name>
            <color type="html">red</color>
        </scale>
        <scale score="1">
            <name lang="en">CL1 - Performed</name>
            <color type="html">green</color>
        </scale>
        <scale score="2">
            <name lang="en">CL2 - Managed</name>
            <color type="html">green</color>
        </scale>
        <scale score="3">
            <name lang="en">CL3 - Defined</name>
            <color type="html">green</color>
        </scale>
        <scale score="4">
            <name lang="en">CL4 - Quant. Managed</name>
            <color type="html">green</color>
        </scale>
        <scale score="5">
            <name lang="en">CL5 - Optimizing</name>
            <color type="html">green</color>
        </scale>
    </rating>
    <rating id="goalSatisfaction">
        <scale score="-1">
            <name lang="en">Not rated</name>
            <color type="html">red</color>
        </scale>
        <scale score="-1">
            <name lang="en">Not applicable</name>
            <color type="html">red</color>
        </scale>
        <scale score="0">
            <name lang="en">Not satisfied</name>
            <color type="html">red</color>
        </scale>
        <scale score="3">
            <name lang="en">Satisfied</name>
            <color type="html">green</color>
        </scale>
    </rating>
    <rating id="processAreaSatisfaction">
        <scale score="-1">
            <name lang="en">Not rated</name>
            <color type="html">red</color>
        </scale>
        <scale score="-1">
            <name lang="en">Not applicable</name>
            <color type="html">red</color>
        </scale>
        <scale score="0">
            <name lang="en">Not satisfied</name>
            <color type="html">red</color>
        </scale>
        <scale score="3">
            <name lang="en">Satisfied</name>
            <color type="html">green</color>
        </scale>
    </rating>
    <rating id="practiceImplementation">
        <scale score="-1">
            <name lang="en">Not Characterized</name>
            <color type="html">red</color>
        </scale>
        <scale score="-1">
            <name lang="en">Not Yet</name>
            <color type="html">red</color>
        </scale>
        <scale score="0">
            <name lang="en">Not Implemented</name>
            <color type="html">red</color>
        </scale>
        <scale score="1">
            <name lang="en">Partially Implemented</name>
            <color type="html">red</color>
        </scale>
        <scale score="2">
            <name lang="en">Largely Implemented</name>
            <color type="html">green</color>
        </scale>
        <scale score="3">
            <name lang="en">Fully Implemented</name>
            <color type="html">green</color>
        </scale>
    </rating>
</ratings>
