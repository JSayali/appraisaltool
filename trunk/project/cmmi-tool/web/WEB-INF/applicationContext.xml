<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:ws="http://jax-ws.dev.java.net/spring/core"
       xmlns:wss="http://jax-ws.dev.java.net/spring/servlet"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd
       http://jax-ws.dev.java.net/spring/core
       http://jax-ws.dev.java.net/spring/core.xsd
       http://jax-ws.dev.java.net/spring/servlet
       http://jax-ws.dev.java.net/spring/servlet.xsd">

    <import resource="security.xml" />

     <!-- JPA -->

    <bean id="defaultEmf" class="org.springframework.orm.jpa.LocalEntityManagerFactoryBean">
        <property name="persistenceUnitName" value="cmmi-toolPU"/>
    </bean>

    <context:annotation-config/>

    <!-- Beans -->

    <bean id="userDao" class="cz.strmik.cmmitool.beans.UserDaoImpl" >
        <property name="defaultAdminPassword" value="adminadmin" />
    </bean>

    <bean id="testServlet" class="cz.strmik.cmmitool.services.TestServlet" scope="request">
        <property name="userDao" ref="userDao"/>
    </bean>

</beans>